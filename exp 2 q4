public class AreaCalculator {

    public static double area(double radius) {
        return Math.PI * radius * radius; // Area of circle
    }

    public static double area(double length, double width) {
        return length * width; // Area of rectangle
    }

    public static double area(double side) {
        return side * side; // Area of square
    }

    public static double area(double base, double height) {
        return 0.5 * base * height; // Area of triangle
    }

    public static void main(String[] args) {
        // Example usage:
        double circleArea = area(5.0);
        double rectangleArea = area(4.0, 6.0);
        double squareArea = area(3.0);
        double triangleArea = area(2.0, 5.0);

        System.out.println("Area of circle: " + circleArea);
        System.out.println("Area of rectangle: " + rectangleArea);
        System.out.println("Area of square: " + squareArea);
        System.out.println("Area of triangle: " + triangleArea);
    }
}
